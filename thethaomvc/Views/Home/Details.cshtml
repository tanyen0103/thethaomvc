@model thethaomvc.Models.SanPham

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>SanPham</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TenSP)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenSP)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HangTT)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HangTT)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GiaTien)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GiaTien)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SoLuong)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SoLuong)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MoTaSP)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MoTaSP)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HinhAnh)
        </dt>
        <dd class="col-sm-10">
            <img src="~/images/@Html.DisplayFor(model => model.HinhAnh)" class="img-fluid" />
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-dark" asp-action="AddToCart" asp-route-id="@Model.IdSP">Chọn mua</a> |
    <a asp-action="Index">Trở về trang chính</a>
</div>
<br />
<div class="col">
    <h3 class="text-danger"> ĐÁNH GIÁ</h3>
    <form asp-action="">
        <div class="mb-3">
            <label>Email</label>
            <input name="cusName" class="form-control" type="text" />
        </div>
        <div class="mb-3">
            <label>Nội dung</label>
            <textarea name="cusAddress" class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <input type="submit" class="btn btn-danger" value="Đăng" />
        </div>
    </form>

    @foreach (var i in Model.DanhGias)
    {
        <div class="card mb-3">
            <h5>@(i.Email)</h5><br />
            <p>@(i.NgayDang)</p>
            <br />
            <p>@(i.NoiDung)</p>
        </div>
    }

</div>
